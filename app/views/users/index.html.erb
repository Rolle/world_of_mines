<div class="container bs-docs-container">
  <div class="row">
    <div class="col-md-12" role="main">
      <div class="panel panel-primary">
        <div class="panel-heading">
            <h3>User</h3>
        </div>
        <div class="panel-body">
          <%if flash.now[:notice] %>
            <div class="alert alert-success alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                  <%= flash.now[:notice] %>
                </div>
            <% end -%>

          <%if flash.now[:error] %>
            <div class="alert alert-danger alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                  <%= flash.now[:error] %>
                </div>
            <% end -%>        
          <%= link_to 'Neuer User', new_user_path, class: "btn btn-primary" %>
          
          <table class="table table-striped table-hover table-condensed">
            <thead>
              <tr>
                <th>Email</th>
                <th>Gruppe</th>
                <th></th> 
              </tr>
            </thead>

            <tbody>
              <% @users.each do |user| %>                
                <tr>
                  <td><%= user.email %></td>                  
                  <td>
                    <%= select_tag 'user_group_id', options_from_collection_for_select(@groups, :id, :description, user.user_group_id), :class=>"input-small",
                       data: {
                        remote: true,
                        url: url_for( action: :update_group, id: user.id.to_s)
                      }
                    %>
                  <td><%= link_to 'Edit', user, class: "btn btn-primary btn-xs" %>
                  <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Bist du sicher?'},class: "btn btn-danger btn-xs"  %></td>
                </tr>
              <% end %>
            </tbody>
          </table>          
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  enable_top_menu("user");
</script> 
