<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Email</th>
      <th></th> 
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?'},class: "btn btn-danger btn-xs"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_registration_path %>

<script>
  enable_top_menu("user");
</script> 
