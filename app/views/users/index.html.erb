<div class="container bs-docs-container">
    <div class="row">
        <div class="col-md-12" role="main">

          <p id="notice"><%= notice %></p>

          <h1>Users</h1>

          <table class="table table-striped table-hover table-condensed">
            <thead>
              <tr>
                <th>Email</th>
                <th></th> 
              </tr>
            </thead>

            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.email %></td>
                  <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Bist du sicher?'},class: "btn btn-danger btn-xs"  %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'Neuer User', new_user_registration_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>

<script>
  enable_top_menu("user");
</script> 
