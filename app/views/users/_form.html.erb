<%= form_for @user, :url => url_for(:controller => 'users', :action => 'create') do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Email", nil, :class => "control-label" %>
    <div class="controls">
        <%= f.text_field :email, {:class=>"input-small form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Passwort", nil, :class => "control-label" %>
    <div class="controls">
        <%= f.password_field :password, {:class=>"input-small form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Passwort wiederholen", nil, :class => "control-label" %>
    <div class="controls">
        <%= f.password_field :password_confirmation, {:class=>"input-small form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Gruppe", nil, :class => "control-label" %>
    <div class="controls">
        <%= f.select :user_group_id, options_from_collection_for_select(@groups, :id, :description), {:class=>"input-small"} %>
    </div>
  </div>     


  <%= button_tag( :class => "btn btn-primary") do %>
    <i class="glyphicon glyphicon-save"></i> Speichern
  <% end %>
<% end %>

