<div class="container bs-docs-container">
  <div class="row">
    <div class="col-md-12" role="main">
      <div class="panel panel-primary">
        <div class="panel-heading">
            <h3>Dokumente</h3>
        </div>
        <div class="panel-body"> 
          <div class=" well well-small">
            <%= form_for(@document, remote: true) do |f| %>
              <div class="form-group">
                <%= f.label "Beschreibung", nil, :class => "control-label" %>
                  <div class="controls">
                      <%= f.text_area :description, {:class=>"input-small form-control"} %>
                  </div>
              </div>
              <div class="form-group">              
                <div class="controls">
                  <%= f.file_field :file, :class=>"input-small form-control" %>
                  </div>
              </div>
              <%= f.submit "Hochladen", class: "btn btn-primary" %>
            <% end %>
          </div>

          <%= will_paginate @documents, renderer: BootstrapPagination::Rails %>
          <div id="documents" class="row">
            <% @documents.each do |document| %>
              <%= render partial: 'document', locals: {document: document} %>
            <% end %>
          </div>
          <%= will_paginate @documents, renderer: BootstrapPagination::Rails %>
        </div>
      </div>
    </div>
  </div>
</div>
<div id='popup'>
</div>
<script>    
    $("a[rel=fancybox]").fancybox({
      parent: "body",
      openEffect  : 'elastic'
    });
    
  enable_top_menu("photos");
</script> 
