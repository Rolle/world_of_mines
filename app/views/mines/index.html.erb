              <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                  <%= flash.now[:error] %>
                </div>
            <% end -%>

          <%= link_to 'Neuer Eintrag', new_mine_path, class: "btn btn-primary" %>
          <div id="table">
            <%= render partial: "mine_table", locals: {mines: @mines} %>
