<br/>
<%= form_for(photo, remote: true) do |f| %>
	<div class="form-group">            	
 		<div class="controls">
			<%= f.file_field :file, :class=>"input-small form-control" %>
  		</div>
	</div>
	<%= hidden_field_tag :mine_id , mine.id.to_s  %>
	<%= f.submit "Hochladen", class: "btn btn-primary" %>
<% end %>
<br/>

<div class="row" id="image-list">
	<% mine.photos.each do |photo| %>
  		<div class="col-xs-6 col-md-3">
			<a href="<%= photo.file.url %>" class="thumbnail fancybox" rel="popover" data-placement="bottom" data-trigger="hover">
			  <%= image_tag(photo.file.url, data: {:src => photo.file.url}) %>
			</a>
  		</div>
  	<% end %>
</div>

<script>
    $(document).ready(function () {
        $(function () {
          $("a[rel=popover]").popover({live: true });
          $("a[rel=popover]").fancybox();
        });
    });
    </script>