<div class="container bs-docs-container">
  <div class="row">
    <div class="col-md-12" role="main">
      <div class="panel panel-primary">
        <div class="panel-heading">
            <h3>Dateien</h3>
        </div>
        <div class="panel-body">
          <%if flash.now[:notice] %>
            <div class="alert alert-success alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                  <%= flash.now[:notice] %>
                </div>
            <% end -%>

          <%if flash.now[:error] %>
            <div class="alert alert-danger alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                  <%= flash.now[:error] %>
                </div>
            <% end -%>
                 
          <%= link_to 'Upload', new_gps_file_path, class: "btn btn-primary" %>
          
          <table class="table table-striped table-hover table-condensed">
            <thead>
              <tr>
                <th>ID</th>
                <th>Author</th>
                <th>Einträge</th>
                <th>Upload am</th>
                <th colspan="2"></th> 
              </tr>
            </thead>

            <tbody>
              <% @files.each do |file| %>
                <tr>
                  <td><%= file.file_id %></td>
                  <td><%= file.user.email %></td>
                  <td><%= file.count.to_s %></td>
                  <td><%= file.created_at.to_s %></td>
                  <td><%= link_to 'Download', file, class: "btn btn-primary btn-xs" %></td>
                  <td><%= link_to 'Löschen', file, method: :delete, data: { confirm: 'Bist du sicher?'},class: "btn btn-danger btn-xs"  %></td>
                  <% if file.is_in_db? %>
                    <td><%= link_to 'aus DB', export_gps_file_path(file), class: "btn btn-success btn-xs" %> </td>
                  <% else %>
                    <td><%= link_to 'in DB', import_gps_file_path(file), class: "btn btn-success btn-xs" %> </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>        
      </div>
    </div>
  </div>
</div>
<script>
  enable_top_menu("dateien");
</script> 
