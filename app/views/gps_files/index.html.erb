<p id="notice"><%= notice %></p>
<div class="container bs-docs-container">
    <div class="row">
        <div class="col-md-12" role="main">

      <h1>Dateien</h1>

      <table class="table table-striped table-hover table-condensed">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Author</th>
            <th>Upload am</th>
            <th colspan="2"></th> 
          </tr>
        </thead>

        <tbody>
          <% @files.each do |file| %>
            <tr>
              <td><%= file.file_id %></td>
              <td><%= file.name %></td>
              <td><%= file.user_id %></td>
              <td><%= file.created_at.to_s %></td>
              <td><%= link_to 'Show', file, class: "btn btn-primary btn-xs" %></td>
              <td><%= link_to 'Edit', edit_file_path(mine), class: "btn btn-primary btn-xs" %></td>
              <td><%= link_to 'Delete', file, method: :delete, data: { confirm: 'Bist du sicher?'},class: "btn btn-danger btn-xs"  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Upload', new_gps_file_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
<script>
  enable_top_menu("dateien");
</script> 
