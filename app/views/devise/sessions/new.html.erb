<div class="container bs-docs-container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3" role="main">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <!--h3>Untergrundkataster - Login</h3-->
          <%= image_tag "kataster-logo.png"%>
        </div>
        <div class="panel-body">
          <%if flash.now[:notice] %>
            <div class="alert alert-success alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                  <%= flash.now[:notice] %>
                </div>
            <% end -%>

          <%if flash.now[:error] %>
            <div class="alert alert-danger alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                  <%= flash.now[:error] %>
              </div>
          <% end -%>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name),html: {:class=>"form-horizontal", :role=>"form"}) do |f| %>

              <div class="form-group has-feedback">
                <label for="email" class="col-sm-2 control-label">Email:</label>
                <div class="col-sm-6">
                    <%= f.email_field :email, :required => true, :class => "form-control" %>
                </div>
              </div>  

              <div class="form-group has-feedback">
                <label for="password" class="col-sm-2 control-label">Password:</label>
                <div class="col-sm-6">
                    <%= f.password_field :password, :required => true, :class => "form-control" %>
                </div>
              </div>  

              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit "Login", :class=>"btn btn-primary"%>
                </div>
              </div>
            <% end %>
            <div class="pull-left">
              <a href="http://untergrundkataster.stillestrecken.de/" target="_blank">Handbuch</a>
            </div>
            <div class="pull-right">
              <a href="mailto:admin@untergrundkataster.de" target="_blank">Kontakt</a>
            </div>
        </div>
      </div>
  </div>
</div>

