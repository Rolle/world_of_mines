html,
body {
    font-family: 'Lato', sans-serif;
    font-size: 16px;
}
body { 
	padding-top: 40px; 
}

.fill{min-height:100%;height:100%}
.scrollup{width:40px;height:40px;opacity:0.3;position:fixed;bottom:30px;right:30px;display:none;text-indent:-9999px;background:url("<%= asset_path 'icon_top.png'%>") no-repeat}

.jumbotron {
	padding-top: 0px;
	padding-bottom: 0px;
	padding-left: 0px;
	padding-right: 0px;
}

.mine-table_previous, .mine-table_next {
	class: btn btn-primary;
}

.bgimage {
        background:url("<%= asset_path 'background.jpg'%>");
	background-size: 100%;
}
.label-as-badge {
    border-radius: 1em;
}

.chart-legend li span{
    display: inline-block;
    width: 12px;
    height: 12px;
    margin-right: 5px;
}


@media (max-width: 1335px) {
    .navbar-header {
        float: none;
    }
    .navbar-toggle {
        display: block;
    }
    .navbar-collapse {
        border-top: 1px solid transparent;
        box-shadow: inset 0 1px 0 rgba(255,255,255,0.1);
    }
    .navbar-collapse.collapse {
        display: none!important;
    }
    .navbar-nav {
        float: none!important;
        margin: 7.5px -15px;
    }
    .navbar-nav>li {
        float: none;
    }
    .navbar-nav>li>a {
        padding-top: 10px;
        padding-bottom: 10px;
    }
    .navbar-text {
        float: none;
        margin: 15px 0;
    }
    /* since 3.1.0 */
    .navbar-collapse.collapse.in { 
        display: block!important;
    }
    .collapsing {
        overflow: hidden!important;
    }
}
